<% if get_recently_viewed_products.any? %>
  <div id="recently_viewed" data-hook>
    <div id="recently-viewed-products" class="row normal-products-container">
      <div class="header">
        <div class="inner">
          <div class="title">Recently Viewed</div>
        </div>
      </div>
      <div class="products">
        <div id="recently-viewed-prev" class="carousel-prev"></div>
        <ul class="normal-carousel" data-type="recently-viewed">
          <% get_recently_viewed_products.each do |product| %>
            <%= render 'spree/home/product', :product => product %>
          <% end %>
        </ul>
        <div id="recently-viewed-next" class="carousel-next"></div>
        <div class="footer"></div>
      </div>
    </div>
  </div>
<% end %>
